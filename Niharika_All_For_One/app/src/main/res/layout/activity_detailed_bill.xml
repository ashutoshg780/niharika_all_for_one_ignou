<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame_bg"
    android:padding="16dp"
    tools:context=".Detailed_Bill_Activity">

    <!-- Header Layout -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_btn"
            android:layout_alignParentStart="true"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIHARIKA ENTERPRISES"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <!-- Profile/Role -->
        <TextView
            android:id="@+id/profileRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager -1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

        <!-- Logout Button -->
        <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/power_btn"
            android:layout_alignParentEnd="true"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Scrollable Job Details -->
    <ScrollView
        android:id="@+id/jobListScroll"
        android:layout_below="@id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- JOBID -->
            <TextView
                android:id="@+id/tvJOBID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp" />

            <!-- Dynamic Spare Parts Table Layout -->
            <TableLayout
                android:id="@+id/sparePartsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_background"
                android:padding="16dp"
                android:backgroundTint="#FFC107"
                android:stretchColumns="0,1,2,3,4">

                <!-- Header Row -->
                <TableRow>
                    <!-- Section 1: Item Code -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item Code"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1.25"/>

                    <!-- Section 2: Item Name -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="3.5"/>

                    <!-- Section 3: Quantity -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="2"/>

                    <!-- Section 4: Cost per Item -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cost"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="1.25"/>

                    <!-- Section 5: Final Price of Item as of Quantity-->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:layout_weight="2"/>
                </TableRow>

                <!-- Dynamic rows will be added below this by Kotlin code -->

                <!-- Total Bill Row -->
                <TableRow>
                    <!-- Section 1: Total -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="8"/>

                    <!-- Section 2: Total Bill -->
                    <TextView
                        android:id="@+id/TotalBill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="2"/>
                </TableRow>


                <!-- Discount Row -->
                <TableRow>
                    <!-- Section 1: Discount -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Discount"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="8"/>

                    <!-- Section 2: Discount -->
                    <TextView
                        android:id="@+id/Discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="2"/>
                </TableRow>


                <!-- Final Bill Row -->
                <TableRow>
                    <!-- Section 1: Total -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Final Bill"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="8"/>

                    <!-- Section 2: Final Bill -->
                    <TextView
                        android:id="@+id/FinalBill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_weight="2"/>
                </TableRow>
            </TableLayout>

            <!-- Buttons Section -->

            <!-- Mismatch Button -->
            <Button
                android:id="@+id/btnMismatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mismatch"
                android:textColor="#FFFFFF"
                android:background="@color/green_500"
                android:layout_marginBottom="12dp" />

            <!-- Discount Button -->
            <Button
                android:id="@+id/btnDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:textColor="#FFFFFF"
                android:background="@color/green_500"
                android:layout_marginBottom="16dp" />

            <!-- Update Bill Button -->
            <Button
                android:id="@+id/btnUpdateBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Bill"
                android:textColor="#FFFFFF"
                android:background="@color/green_500"
                android:layout_marginBottom="12dp" />

            <!-- Finalize Bill Button -->
            <Button
                android:id="@+id/btnFinalizeBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalize Bill"
                android:textColor="#FFFFFF"
                android:background="@color/green_500"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
