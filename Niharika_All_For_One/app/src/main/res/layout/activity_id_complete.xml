<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame_bg"
    tools:context=".New_Job_Activity">

    <!-- Header Layout -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_btn"
            android:layout_alignParentStart="true"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIHARIKA ENTERPRISES"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/profileRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manager -1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/power_btn"
            android:layout_alignParentEnd="true"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:fillViewport="true"
        android:padding="16dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Customer Name -->
            <EditText
                android:id="@+id/etCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Employe Name"
                android:background="@android:drawable/edit_text"
                android:padding="10dp" />

            <!-- Contract No -->
            <EditText
                android:id="@+id/etContractNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contract No."
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_below="@+id/etCustomerName"
                android:layout_marginTop="8dp" />

            <!-- Purchase Date Heading -->
            <TextView
                android:id="@+id/headPurchaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_below="@+id/etContractNo"
                android:layout_marginTop="12dp" />

            <!-- Purchase Date -->
            <Button
                android:id="@+id/btnPurchaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02-02-2025"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/headPurchaseDate"
                android:padding="10dp" />

            <!-- Profile Photo Cards -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImgProfile"
                android:layout_width="225dp"
                android:layout_height="225dp"
                app:cardCornerRadius="8dp"
                android:layout_below="@+id/btnPurchaseDate"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_camera"
                        android:layout_height="80dp"
                        android:layout_width="80dp"/>

                    <TextView
                        android:text="Bill"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_gravity="center|bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Aadhar no -->
            <EditText
                android:id="@+id/editAadharno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Aadhar no"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:textColor="#000"
                android:layout_below="@+id/cardImgProfile"
                android:layout_marginTop="12dp"/>

            <!-- Aadhar Photos -->
            <GridLayout
                android:id="@+id/uploadImag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:layout_below="@id/editAadharno"
                android:layout_marginBottom="8dp"
                android:layout_centerInParent="true">

                <!-- Photo Cards -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_camera"
                            android:layout_height="80dp"
                            android:layout_width="80dp"/>

                        <TextView
                            android:text="Bill"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_gravity="center|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_camera"
                            android:layout_height="80dp"
                            android:layout_width="80dp"/>

                        <TextView
                            android:text="Bill"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_gravity="center|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Complete Profile Button -->
            <Button
                android:id="@+id/BtnCompleteProfile"
                android:text="Complete Profile"
                android:background="#FF5722"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_below="@id/uploadImag"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
