<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame_bg"
    tools:context=".Dashboard_Engineer_Field_Activity">

    <!-- Header Layout -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Profile Photo -->
        <ImageView
            android:id="@+id/profileBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/circle_border_green"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_profile" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIHARIKA ENTERPRISES"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <!-- Profile/Role -->
        <TextView
            android:id="@+id/profileRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineer (Field)"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

        <!-- Logout Button -->
        <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/power_btn"
            android:layout_alignParentEnd="true"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_below="@id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="16dp">

                <!-- Pending Job Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJobsPending"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#D3D3D3"
                    android:layout_marginEnd="16dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Jobs"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="12"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Pending"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Jobs Completed Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJobsCompleted"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#D3D3D3"
                    android:layout_marginStart="16dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Jobs"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="5"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Completed"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- Action Buttons -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnJobsList"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Jobs List"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnNewJob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="New Job"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSpairPartsBag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Spair Part List Bag"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSpairParts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Spair Part List Workshop"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnStartEndDay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Start/ End Day"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
