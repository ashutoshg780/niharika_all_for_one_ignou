<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_frame_bg"
    android:padding="12dp"
    tools:context=".Dashboard">


    <!-- Header Layout -->
    <include
        android:id="@id/headerLayout"
        layout="@layout/include_header"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_below="@id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="16dp">

                <!-- Create New Job Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardNewJob"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#D3D3D3"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="New"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/add_btn"
                            app:tint="#000000" />

                        <TextView
                            android:text="Job"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Pending Job Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJobsPending"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#D3D3D3"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Jobs"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/jobsPending"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Pending"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Jobs Completed Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardJobsCompleted"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#D3D3D3"
                    android:layout_marginStart="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Jobs"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/jobsCompleted"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Completed"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- Action Buttons -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <Button
                    android:id="@+id/btnJobsList"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Jobs List"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnNewJob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="New Job"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnSpairPartsBag"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Spair Part List Bag"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnSpairPartsWorkshop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Spair Part List Workshop"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnWorkingJobs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFC107"
                    android:text="Currently Working Jobs"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnPendingJobs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FF5722"
                    android:text="Pending Jobs"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnCompletedJobs"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Completed Jobs"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnSpairParts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Spair Part List"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnSendReminder"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Send Reminder"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnGenerateReport"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Generate Report"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnArchives"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Archives"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnAttendance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Attendance"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnPayouts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Payouts"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnApproveNewId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Approve Login"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnWarrrantyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Warrranty Status"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnOrderSpairParts"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Order Spair Parts"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnWriteMail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Write Mail"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnStatistics"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Statistics"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnCustomerList"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Customer List"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnStartEndDay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#4CAF50"
                    android:text="Start/ End Day"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>